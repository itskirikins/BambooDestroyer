{
  "name": "Bambooo Destroyer",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension destroys bamboo words with a panda.",

  "browser_action": {
    "default_icon": "bdicon.png",
    "default_popup": "browseraction/popup.html"
  }, 

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "js": ["content.js"]                      
    }
  ]
}
